<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kumanofes2017.Views.InfoDetailPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="{Binding Item.Text}" FontSize="Large" TextColor="Black"/>
            <Label Text="{Binding Item.Time}" FontSize="Small" TextColor="Black"/>
            <Label Text="{Binding Item.Detail}" FontSize="Medium" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>